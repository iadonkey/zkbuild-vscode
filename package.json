{
  "name": "zkbuild",
  "displayName": "Zeugwerk Build Service",
  "description": "Remote TwinCAT project building using Zeugwerk build service",
  "version": "0.1.0",
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:zkbuild.build"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "zkbuild.build",
        "title": "Build with Zeugwerk"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npx @vscode/vsce package",
    "install": "npm run compile && npx @vscode/vsce package -o zkbuild.vsix && code --install-extension zkbuild.vsix",
    "install:force": "npm run compile && npx @vscode/vsce package -o zkbuild.vsix && code --install-extension zkbuild.vsix --force"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/archiver": "^7.0.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "archiver": "^6.0.1",
    "form-data": "^4.0.0",
    "ignore": "^5.2.4"
  }
}
